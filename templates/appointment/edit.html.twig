{% extends 'base.html.twig' %}

{% block title %}Edit Appointment{% endblock %}

{% block body %}
    <div class="grid-container">
        <div class="panel-heading">
            <div>
                <h4 class="text-center">
                    Scheduled Appointments
                </h4>
            </div>

            <div class="callout">
                {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <input type="submit" value="SET APPOINTMENT" class="button success float-right">
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('appointment_index') }}">back to list</a>
                    {% elseif is_granted('ROLE_DOCTOR') %}
                    <a href="{{ path('appointment_doctor') }}" class="button alert">CANCEL</a>
                    {% endif %}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}