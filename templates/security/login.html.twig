{% extends 'base.html.twig' %}

{% block title %}Doctor-Patient Management System - Login{% endblock %}
{% block body %}
	<div class="grid-container" style="width:450px;">
		<form action="{{ path('login') }}" method="POST" class="log-in-form">
		<h3 class="text-center">Login</h3>
		{% if error %}
			<div style="color:red;text-align:center;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
			<label for="u">Username:</label>
			<input type="text" id="username" name="_username" value="{{ last_username }}">
			<label for="password">Password:</label>
			<input type="password" id="password" name="_password">	
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<button type="submit" class="button primary expanded">LOGIN</button>	
		</form>
	</div>
{% endblock %}