{% extends 'base.html.twig' %}

{% block title %}New Appointment{% endblock %}

{% block body %}
<div class="grid-container">
	<div class="panel-heading">
			<div>
				<h4 class="text-center">
					Set an Appointment
				</h4>
			</div>

            <div class="callout">
            {% for message in app.flashes('success') %}
                <div class="flash-notice">
                    {{ message }}
                </div>
            {% endfor %}

                {{ form_start(form) }}
                <div class="grid-x">
                    <div class="small-12 medium-3 columns">
                        {{ form_row(form.appointmentDate) }}
                    </div>
                    <div class="small-12 medium-8 columns" style="margin-left:50px;">
                        {{ form_row(form.reason) }}
                    </div>
                    <div class="small-12 medium-6 columns">
                        {{ form_row(form.doctor) }}
                    </div>
                    <div class="small-12 medium-6">
                        <input type="submit" value="SET APPOINTMENT" class="small button success float-right" style="margin-top:4%;margin-right:8%;">
                    </div>
                {{ form_end(form) }}
                </div>
            </div>
    </div>
</div>
{% endblock %}