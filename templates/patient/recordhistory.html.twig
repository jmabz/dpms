{% extends 'base.html.twig' %}
{% block title %}Patient Records History{% endblock %}
{% block body %}
<div class="grid-container">
<div class="panel-heading">
		<div>
			<h4 class="text-center">
				Patient Records History
			</h4>
		</div>

<div class="callout">
	<table class="table unstriped">
		<thead>
			<tr>
				<th class="text-center">Checkup Date</th>
				<th class="text-center">Doctor in Charge</th>
				<th class="text-center">Diagnosis Category</th>
			</tr>
		</thead>
		<tbody>
		{% for record in records %}
			<tr class="text-center">
				<td><a href="{{ path('view_record', {recordId : record.id}) }}" title="Click here to view full details.">{{ record.checkupDate|date('m/d/Y') }}</a></td>
				<td>{{ record.doctor.fname }} {{ record.doctor.mname }} {{ record.doctor.lname }} {{ record.doctor.suffix }}</td>
				<td>{{ record.diagnosisCategory.diagnosisName }}</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
</div>
</div>
</div>
{% endblock %}