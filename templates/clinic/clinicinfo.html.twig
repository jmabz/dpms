{% extends 'base.html.twig' %}
{% block title %}Clinic Info{% endblock %}
{% block body %}
<div class="grid-container">
	<hr>
		<div class="panel-heading">
			<div class="sub_nav">
	<ul>
		<li><a href="{{ path('admin') }}">Home</a></li>
		<li><a href="{{ path('clinic_list') }}">Clinics</a></li>
		<li><a href="{{ path('diagnosis_categories') }}">Diagnosis Categories</a></li>
		<li><a href="{{ path('doctor_list') }}">Manage Doctors</a></li>
		<li><a href="{{ path('patient_list') }}">Patients</a></li>
	</ul>
	</div>
	</div>
	<div class="callout">
		<h4>{{ clinic.clinicName }}</h4>
			<p>Schedule: {{ clinic.schedStart|date('h:i A') }} - {{ clinic.schedEnd|date('h:i A') }}</p>
		<p>Email address: {{ clinic.email }}</p>
		{% if doctor %}
				<table class="unstriped">
					<tbody>
						{# {% for doctor in doctors %} #}
						<tr>
							<td>
								Dr. {{ doctor.userInfo.fname }} {{ doctor.userInfo.mname }} {{ doctor.userInfo.lname }} {{ doctor.userInfo.suffix }}
							</td>
						</tr>
						{# {% endfor %} #}
					</tbody>
				</table>
			{% endif %}
	</div>
</div>
{% endblock %}

