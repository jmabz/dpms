{% extends 'base.html.twig' %}
{% block title %}Clinic List{% endblock %}
{% block body %}
<div class="grid-container">
<div class="panel-heading">
		<div>
			<h4 class="text-center">Clinics
				<a href="{{ path('add_clinic') }}" class="button small float-right">Add New Clinic</a>
			</h4>
		</div>
		<div class="callout">
			<table class="table unstriped">
				<thead>
					<tr>
						<th>Name</th>
					</tr>
				</thead>
				<tbody>
					{% for clinic in clinics %}
						<tr>
							<td>
								<a href="{{ path('view_clinic', {clinicId : clinic.id}) }}">{{ clinic.clinicName }}</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}