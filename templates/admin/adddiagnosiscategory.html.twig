{% extends 'base.html.twig' %}
{% block title %}Add Diagnosis Category{% endblock %}
{% block body %}
<div class="grid-container">
		<div class="panel-heading">
			<div>
				<h4 class="text-center">Add New Category</h4>
			</div>
<div class="callout">
			{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
			{{ form_widget(form) }}
			<input type="submit" class="button success float-right" value="Add Diagnosis Category">
			<a href="{{ path('diagnosis_categories') }}" class="button alert">Cancel</a>
		{{ form_end(form) }}
	</div>
</div>
</div>
{% endblock %}