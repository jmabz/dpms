{% extends 'base.html.twig' %}
{% block title %}List of Doctors{% endblock %}
{% block body %}
	<div class="grid-container">
		<hr>
	<div class="panel-heading">
		<ul class="menu">
			<h4> Doctors </h4>
			<li><a href="{{ path('admin') }}">Home</a></li>
			<li><a href="{{ path('clinic_list') }}">Clinics</a></li>
			<li><a href="{{ path('diagnosis_categories') }}">Diagnosis Categories</a></li>
			<li><a href="{{ path('doctor_list') }}">Manage Doctors</a></li>
			<li><a href="{{ path('patient_list') }}">Manage Patients</a></li>
		</ul>
		</div>
		<div class="callout">
			<a href="{{ path('add_doctor') }}" class="button small success">Add New Doctor</a>
			<table class="table" width="100%">
			<thead>
				<tr>
					<th>Name</th>
					<th>Accreditation Code</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
			{% for doctor in doctors %}
				<tr>
					<td><a href="{{ path('profile', {userId : doctor.id}) }}">{{ doctor.userInfo.fname }}</a></td>
					<td>{{ doctor.accreditationinfo.accreditationcode }}</td>
					<td>
						<a href="#">EDIT</a>|
						<a href="#">DELETE</a>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
		</div>
	</div>
{% endblock %}
