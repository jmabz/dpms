{% extends 'base.html.twig' %}
{% block title %}List of Doctors{% endblock %}
{% block body %}
	<div class="grid-container">
		<div class="grid-x">
			<div class="cell medium-9">
				<h1>List of Doctors</h1>
			</div>
			<div class="cell medium-3">
				<a href="{{ path('add_doctor') }}" class="button success">Add New Doctor...</a>
			</div>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th>Name</th>
					<th>Accreditation Code</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
			{% for doctor in doctors %}
				<tr>
					<td><a href="{{ path('profile', {userId : doctor.id}) }}">{{ doctor.userInfo.fname }}</a></td>
					<td>{{ doctor.accreditationinfo.accreditationcode }}</td>
					<td>
						<a href="{{ path('delete_user', {userId : doctor.id}) }}" class="button alert" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}