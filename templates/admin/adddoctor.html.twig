{% extends 'base.html.twig' %}
{% block title %}Add Doctor{% endblock %}
{% block body %}
<div class="grid-container">
	<hr>
		<div class="panel-heading">
			<ul class="menu">
		<h4> Add Doctor </h4>
		<li><a href="{{ path('admin') }}">Home</a></li>
		<li><a href="{{ path('clinic_list') }}">Clinics</a></li>
		<li><a href="{{ path('diagnosis_categories') }}">Diagnosis Categories</a></li>
		<li><a href="{{ path('doctor_list') }}">Manage Doctors</a></li>
		<li><a href="{{ path('patient_list') }}">Manage Patients</a></li>
	</ul>
	</div>
	<div class="callout">
			{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
			<div class="grid-x">
				<div class="cell">
					{{ form_row(form.username) }}
					{{ form_row(form.plainPassword) }}
				</div>
				<div class="cell medium-6">
					{{ form_row(form.userinfo) }}
				</div>
				<div class="cell medium-6">
					{{ form_row(form.accreditationinfo) }}
				</div>
			</div>
			<input type="submit" class="button success" value="Add Doctor">
			<a href="{{ path('doctor_list') }}" class="button">Cancel</a>
		{{ form_end(form) }}	
	</div>
</div>
{% endblock %}