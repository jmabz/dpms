{% extends 'base.html.twig' %}
{% block title %}Add Doctor{% endblock %}
{% block body %}
<div class="grid-container">
	<div class="panel-heading">
		<div>
			<h4 class="text-center">
				Add New Doctor
			</h4>
	</div>
<div class="callout">

<nav aria-label="You are here:" role="navigation">
  <ul class="breadcrumbs">
    <li><a href="{{ path('admin') }}">Home</a></li>
	<li><a href="{{ path('clinic_list') }}">Clinics</a></li>
	<li><a href="{{ path('diagnosis_categories') }}">Diagnosis Categories</a></li>
	<li><a href="{{ path('doctor_list') }}">Manage Doctors</a></li>
	<li><a href="{{ path('patient_list') }}">Manage Patients</a></li>
  </ul>
</nav>

			{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
			<div class="grid-x">
				<div class="cell">
					{{ form_row(form.username) }}
					{{ form_row(form.plainPassword) }}
				</div>
				<div class="cell medium-6">
					{# {{ form_errors(form.userinfo) }} #}
					{{ form_widget(form.userinfo) }}
					
				</div>
				<div class="cell medium-6">
					{# {{ form_errors(form.accreditationinfo) }} #}
					{{ form_widget(form.accreditationinfo) }}
				</div>
			</div>
			<input type="submit" class="button success" value="Add Doctor">
			<a href="{{ path('doctor_list') }}" class="button float-right">Cancel</a>
		{{ form_end(form) }}	
	</div>
</div>
</div>
{% endblock %}