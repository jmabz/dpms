{% extends 'base.html.twig' %}
{% block title %}Edit Accreditation Info{% endblock %}
{% block body %}

<div class="grid-container">
	<div class="panel-heading">
	<div>
			<h4 class="text-center">
				Edit Accreditation Info
			</h4>
	</div>
<div class="callout">
	{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
		{{ form_widget(form) }}
		<input type="submit" class="button success" value="Save Changes">
		<a href="{{ path('profile', {'userId' : 1}) }}" class="button float-right">Cancel</a>
	{{ form_end(form) }}
</div>
</div>
{% endblock %}