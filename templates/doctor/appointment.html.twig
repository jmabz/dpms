{% extends 'base.html.twig' %}

{% block title %}Appointment{% endblock %}

{% block body %}
    <h1>Appointment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ appointment.id }}</td>
            </tr>
            <tr>
                <th>AppointmentDate</th>
                <td>{{ appointment.appointmentDate ? appointment.appointmentDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>AppointmentStatus</th>
                <td>{{ appointment.appointmentStatus }}</td>
            </tr>
            <tr>
                <th>Reason</th>
                <td>{{ appointment.reason }}</td>
            </tr>
        </tbody>
    </table>

    <a href={% if is_granted('ROLE_ADMIN') %}
                {{ path('appointment_index') }}
            {% elseif is_granted('ROLE_DOCTOR') %}
                {{ path('appointment_doctor') }}
            {% endif %} 
        class="button primary">Back to List</a>

    {# {{ include('appointment/_delete_form.html.twig') }} #}
{% endblock %}